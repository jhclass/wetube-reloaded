extends base

block content  
    if errorMessage     
        span(style="color:red;font-weight:bold")=errorMessage
    form(method="POST")
        input(placeholder="이름을 작성하여 주세요", name="name", type="text", required)
        input(placeholder="이메일을 작성하여 주세요", name="email", type="email", required)
        input(placeholder="아이디를 입력하여 주세요", name="username", type="text", required)
        input(placeholder="비밀번호를 입력하여 주세요", name="password", type="password", required)
        input(placeholder="비밀번호를 다시한번 입력하여주세요", name="password2", type="password", required)
        input(placeholder="사는 곳을 입력하여 주세요", name="location", type="text", required)
        input(type="submit", value="Join")

    hr
    div    `
        span 이미 계정이 있습니까?
        br
        a(href="/login") Log in now &rarr;
